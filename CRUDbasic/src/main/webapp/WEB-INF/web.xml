<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <listener>
        <description>HttpSessionListener</description>
        <listener-class>com.arelance.crudbasic.main.CreaLista</listener-class>
    </listener>
    <servlet>
        <servlet-name>ServletCRUD</servlet-name>
        <servlet-class>com.arelance.crudbasic.main.ServletCRUD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostDeleteServlet</servlet-name>
        <servlet-class>com.arelance.crudbasic.main.PostDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCRUD</servlet-name>
        <url-pattern>/ServletCRUD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostDeleteServlet</servlet-name>
        <url-pattern>/PostDeleteServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Main.jsp</welcome-file>
    </welcome-file-list>
</web-app>
